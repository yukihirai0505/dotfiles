[core]
  excludesfile = ~/.gitignore
  editor = vim

[user]
  name = Yuki Hirai
  email = yukihirai0505@gmail.com

[color]
  ui = auto


[alias]
  st     = status --short --branch
  ol     = log --oneline --graph
  co     = checkout
  br     = branch
  ci     = commit -v
  fix    = commit --amend -v
  fixa   = commit --amend -v -a
  ca     = commit -v -a
  aa     = add .
  reh    = reset --hard
  ri     = rebase -i
  df     = diff
  dc     = diff --cached
  sh     = show
  pl     = pull --ff
  plr    = pull --rebase
  ps     = push
  psu    = !git push -u origin "$(git rev-parse --abbrev-ref HEAD)"
  git    = !git
  tig    = !tig
  gr     = grep -I

[push]
  default = current
